<%= form_with(model: student, local: true) do |form| %>
  <div class="form-row align-items-end">
     <div class="form-group col-md-4">
      <%= form.label :name, class: 'sr-only' %>
      <%= form.text_field :name, class: 'form-control', required: 'required' %>
    </div>
  
     <div class="form-group col-md-4">
      <%= form.label :group, class: 'sr-only' %>
      <%= form.collection_select :group_id, Group.all, :id, :name, {}, {:class => 'form-control custom-select'} %>
    </div>

     <div class="form-group col-md-3">
      <%= form.submit class: 'btn btn-primary' %>

      <%= link_to 'x', student, method: 'delete', class: 'btn btn-danger' %>
    </div>

  </div>
<% end %>
